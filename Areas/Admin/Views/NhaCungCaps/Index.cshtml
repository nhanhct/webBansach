@model IEnumerable<Models.EF.NhaCungCap>

@{
    ViewBag.Title = "Index";
}

<section id="main-content">
    <section class="wrapper">
        <!--overview start-->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-laptop"></i>Quản lý nhà cung cấp</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Trang chủ</a></li>
                    <li><i class="fa fa-laptop"></i>Quản lý nhà cung cấp</li>
                </ol>
            </div>
        </div>

        <p>
            @Html.ActionLink("Thêm nhà cung cấp", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenNCC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SDT)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNCC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDT)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaNCC }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaNCC }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaNCC })
                    </td>
                </tr>
            }

        </table>
    </section>
    <div class="text-right">
